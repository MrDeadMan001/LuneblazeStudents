<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="200dp"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="@dimen/padding_small"
        android:layout_marginBottom="@dimen/padding_small"
        android:layout_marginLeft="@dimen/padding_extra_small"
        android:layout_marginRight="@dimen/padding_extra_small"
        android:elevation="2dp"
        android:background="@drawable/white_rounded_border_white_fill"
        >
        <TextView
            android:id="@+id/tv_article_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="@dimen/padding_medium"
            android:layout_marginRight="@dimen/padding_medium"
            android:layout_toLeftOf="@id/tv_accept_button"
            android:maxLines="1"
            android:ellipsize="end"
            android:text="Article name"
            android:textColor="@color/dark_grey"
            android:textSize="@dimen/text_large"
            android:textStyle="bold"
            android:padding="@dimen/padding_small"
            />
        <ImageView
            android:id="@+id/iv_cover_photo"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:scaleType="centerCrop"
            android:layout_margin="@dimen/padding_extra_small"
            android:src="@drawable/placeholder" />
        <TextView
            android:id="@+id/tv_article_writer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:paddingLeft="@dimen/padding_medium"
            android:paddingRight="@dimen/padding_medium"
            android:paddingTop="@dimen/padding_extra_small"
            android:text="Written by : Writer name"
            android:textColor="@color/med_grey"
            android:textSize="@dimen/text_med"
            />
        <TextView
            android:id="@+id/tv_time_stamp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:paddingBottom="@dimen/padding_small"
            android:paddingLeft="@dimen/padding_medium"
            android:paddingRight="@dimen/padding_medium"
            android:text="time stamp"
            android:textColor="@color/med_grey"
            android:textSize="@dimen/text_med"
            />
    </LinearLayout>


</LinearLayout>
