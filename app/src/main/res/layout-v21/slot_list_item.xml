<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:paddingLeft="@dimen/padding_large"
    android:paddingRight="@dimen/padding_large">

    <RelativeLayout
        android:id="@+id/rl_content_wrapper"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:padding="@dimen/padding_medium">

        <TextView
            android:id="@+id/tv_day_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/padding_large"
            android:drawableLeft="@drawable/ic_slot_clock"
            android:drawablePadding="@dimen/padding_medium"
            android:text="Dayname"
            android:textColor="@color/med_grey"
            android:textSize="@dimen/text_xl"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_slot1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_toRightOf="@id/tv_day_name"
            android:gravity="right"
            android:text="slot 1"
            android:textColor="@color/med_grey"
            android:textSize="@dimen/text_large" />

        <TextView
            android:id="@+id/tv_slot2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_slot1"
            android:layout_alignParentRight="true"
            android:layout_toRightOf="@id/tv_day_name"
            android:gravity="right"
            android:text="slot 2"
            android:textColor="@color/med_grey"
            android:textSize="@dimen/text_large" />


    </RelativeLayout>

    <View
        android:id="@+id/view_divider"
        android:layout_width="160dp"
        android:layout_height="1px"
        android:layout_alignBottom="@id/rl_content_wrapper"
        android:layout_centerHorizontal="true"
        android:background="@color/light_grey" />
</RelativeLayout>