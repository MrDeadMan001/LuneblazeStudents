<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rl_parent"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/ultra_light_grey"
    tools:activity="com.avadna.luneblaze.activities.profileInfo.ProfileInfoActivity">

    <RelativeLayout
        android:id="@+id/rl_top_bar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/action_bar_color">
        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@android:drawable/ic_media_previous"
            android:layout_centerVertical="true"
            android:padding="@dimen/padding_medium"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/edit_profile"
            android:textStyle="bold"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/iv_back"
            android:padding="@dimen/padding_medium"
            android:layout_marginLeft="@dimen/padding_large"
            android:textSize="@dimen/text_xxxl"
            android:textColor="@color/white"
            />
    </RelativeLayout>

    <ScrollView
        android:id="@+id/sv_content_wrapper"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/rl_top_bar"
        android:background="@color/white">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:orientation="vertical"
            android:paddingBottom="32dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:paddingTop="16dp">


            <!--  <EditText
                  android:id="@+id/et_user_name"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  style="@style/editTextThemeAppThemeMed"
                  android:elevation="1dp"
                  android:hint="Username"
                  />-->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/padding_medium"
                android:layout_marginRight="@dimen/padding_medium"
                android:paddingLeft="@dimen/padding_medium"
                android:paddingRight="@dimen/padding_medium"
                android:paddingTop="@dimen/padding_medium"
                android:text="@string/username"
                android:textColor="@color/app_theme_dark"
                android:textSize="@dimen/text_large"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/et_username"
                style="@style/editTextThemeAppThemeMed"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/padding_medium"
                android:layout_marginRight="@dimen/padding_medium"
                android:paddingLeft="@dimen/padding_medium"
                android:paddingRight="@dimen/padding_medium"
                android:paddingTop="@dimen/padding_medium"
                android:text="@string/first_name"
                android:textColor="@color/app_theme_dark"
                android:textSize="@dimen/text_large"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/et_first_name"
                style="@style/editTextThemeAppThemeMed"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/padding_medium"
                android:layout_marginRight="@dimen/padding_medium"
                android:paddingLeft="@dimen/padding_medium"
                android:paddingRight="@dimen/padding_medium"
                android:paddingTop="@dimen/padding_medium"
                android:text="@string/last_name"
                android:textColor="@color/app_theme_dark"
                android:textSize="@dimen/text_large"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/et_last_name"
                style="@style/editTextThemeAppThemeMed"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/padding_medium"
                android:layout_marginRight="@dimen/padding_medium"
                android:paddingLeft="@dimen/padding_medium"
                android:paddingRight="@dimen/padding_medium"
                android:paddingTop="@dimen/padding_medium"
                android:text="@string/designation"
                android:textColor="@color/app_theme_dark"
                android:textSize="@dimen/text_large"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/et_designation"
                style="@style/editTextThemeAppThemeMed"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/padding_medium"
                android:layout_marginRight="@dimen/padding_medium"
                android:paddingLeft="@dimen/padding_medium"
                android:paddingRight="@dimen/padding_medium"
                android:paddingTop="@dimen/padding_medium"
                android:text="Institution / Organisation"
                android:textColor="@color/app_theme_dark"
                android:textSize="@dimen/text_large"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/et_organisation"
                style="@style/editTextThemeAppThemeMed"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/padding_medium"
                android:layout_marginRight="@dimen/padding_medium"
                android:paddingLeft="@dimen/padding_medium"
                android:paddingRight="@dimen/padding_medium"
                android:paddingTop="@dimen/padding_medium"
                android:text="@string/current_area"
                android:textColor="@color/app_theme_dark"
                android:textSize="@dimen/text_large"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/et_area"
                style="@style/editTextThemeAppThemeMed"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/padding_medium"
                android:layout_marginRight="@dimen/padding_medium"
                android:paddingLeft="@dimen/padding_medium"
                android:paddingRight="@dimen/padding_medium"
                android:paddingTop="@dimen/padding_medium"
                android:text="@string/current_field_of_interest"
                android:textColor="@color/app_theme_dark"
                android:textSize="@dimen/text_large"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/et_foi"
                style="@style/editTextThemeAppThemeMed"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <View
                android:layout_width="match_parent"
                android:layout_height="16dp"
                android:background="#fff" />

            <TextView
                android:id="@+id/tv_done"
                style="@style/blue_button_style"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:elevation="2dp"
                android:text="@string/done" />
        </LinearLayout>
    </ScrollView>

</RelativeLayout>
