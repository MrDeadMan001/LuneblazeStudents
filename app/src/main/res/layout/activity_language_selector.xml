<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:activity=".activities.settingActivities.LanguageSelectorActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/tv_done"
        android:layout_alignParentTop="true"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_english"
            style="@style/settingsItemStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/english" />

        <include layout="@layout/thinnest_light_grey_divider_with_margin" />

        <TextView
            android:id="@+id/tv_hindi"
            style="@style/settingsItemStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/hindi" />

        <include layout="@layout/thinnest_light_grey_divider_with_margin" />

    </LinearLayout>

    <TextView
        android:id="@+id/tv_done"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_margin="@dimen/padding_small"
        android:background="@drawable/light_blue_rounded_button"
        android:gravity="center"
        android:padding="@dimen/padding_large"
        android:text="@string/done"
        android:textColor="@color/white"
        android:textSize="@dimen/text_xl"
        android:textStyle="bold" />


</RelativeLayout>