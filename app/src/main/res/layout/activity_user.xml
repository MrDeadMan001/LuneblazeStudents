<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/ultra_light_grey"
    android:orientation="vertical"
    tools:activity="com.avadna.luneblaze.activities.UserActivity">


    <com.google.android.material.tabs.TabLayout
        android:id="@+id/tl_user_activities"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="2dp"
        app:tabMode="fixed"
        android:background="@color/white"
        app:tabSelectedTextColor="@color/app_theme_dark"
        app:tabTextColor="@color/med_grey" />

    <include layout="@layout/thinnest_app_theme_color_divider" />

    <androidx.viewpager.widget.ViewPager
        android:id="@+id/vp_activities"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/padding_medium"
        android:layout_marginRight="@dimen/padding_medium"
        android:layout_marginTop="@dimen/padding_small"
        android:background="@android:color/white" />


</LinearLayout>