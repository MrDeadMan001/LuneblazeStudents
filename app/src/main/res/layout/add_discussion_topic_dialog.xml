<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:padding="@dimen/padding_large"
    android:orientation="vertical">


    <TextView
        android:id="@+id/tv_dialog_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="@dimen/padding_large"
        android:text="Add a discussion topic"
        android:textColor="@color/dark_grey"
        android:textSize="@dimen/text_xl" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="@dimen/padding_large"
        android:layout_marginRight="@dimen/padding_large"
        android:orientation="vertical">

        <EditText
            android:id="@+id/et_discussion_topic"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/padding_medium"
            android:background="@drawable/grey_border_white_fill"
            android:hint="Enter discussion topic here"
            android:maxLines="5"
            android:padding="@dimen/padding_medium"
            android:textColor="@color/dark_grey"
            android:textColorHint="@color/light_grey"
            android:textSize="@dimen/text_large" />


        <include layout="@layout/thick_divider" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <TextView
                android:id="@+id/tv_cancel"
                style="@style/blue_button_style"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="@string/cancel" />
            <TextView
                android:id="@+id/tv_done"
                style="@style/blue_button_style"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="@string/done" />

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>