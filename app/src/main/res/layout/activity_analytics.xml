<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/ultra_light_grey"
    tools:activity=".activities.organisation.AnalyticsActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">



        <LinearLayout
            android:id="@+id/ll_content_wrapper"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/ultra_light_grey"
            android:orientation="vertical"
            android:paddingLeft="@dimen/padding_small"
            android:paddingRight="@dimen/padding_small"
            tools:activity=".activities.organisation.AnalyticsActivity">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/padding_small"
                android:background="@drawable/white_rounded_border_white_fill"
                android:elevation="2dp"
                android:orientation="vertical"
                android:paddingLeft="@dimen/padding_medium"
                android:paddingTop="@dimen/padding_medium"
                android:paddingRight="@dimen/padding_small"
                android:paddingBottom="@dimen/padding_large">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="@dimen/padding_small"
                    android:paddingTop="@dimen/padding_small"
                    android:paddingRight="@dimen/padding_small"
                    android:paddingBottom="@dimen/padding_medium"
                    android:text="@string/plan_details"
                    android:textColor="@color/dark_grey"
                    android:textSize="@dimen/text_xxxl"
                    android:textStyle="bold" />

                <include layout="@layout/thinnest_light_grey_divider" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/padding_small"
                    android:orientation="vertical"
                    android:padding="@dimen/padding_small">


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/current_plan"
                        android:textColor="@color/med_grey"
                        android:textSize="@dimen/text_xl" />

                    <TextView
                        android:id="@+id/tv_plan_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="5000 Student plan"
                        android:textColor="@color/med_grey"
                        android:textSize="@dimen/text_xxl"
                        android:textStyle="bold" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/padding_small"
                    android:orientation="vertical"
                    android:padding="@dimen/padding_small">


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/price"
                        android:textColor="@color/med_grey"
                        android:textSize="@dimen/text_xl" />

                    <TextView
                        android:id="@+id/tv_plan_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="₹165000"
                        android:textColor="@color/med_grey"
                        android:textSize="@dimen/text_xxl"
                        android:textStyle="bold" />


                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/padding_medium"
                    android:layout_marginRight="@dimen/padding_medium"
                    android:orientation="vertical"
                    android:padding="@dimen/padding_small">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Cost per Attendee"
                        android:textColor="@color/med_grey"
                        android:textSize="@dimen/text_xl" />

                    <TextView
                        android:id="@+id/tv_per_student_cost"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="₹35"
                        android:textColor="@color/med_grey"
                        android:textSize="@dimen/text_xxl"
                        android:textStyle="bold" />


                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/padding_small"
                    android:layout_weight="1"
                    android:background="@drawable/white_rounded_border_white_fill"
                    android:elevation="2dp"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="@dimen/padding_large">

                    <TextView
                        android:id="@+id/tv_current_balance"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="₹120000"
                        android:textColor="@color/med_grey"
                        android:textSize="@dimen/text_xxxl"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="@string/current_balance"
                        android:textColor="@color/med_grey"
                        android:textSize="@dimen/text_xl" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/padding_small"
                    android:layout_weight="1"
                    android:background="@drawable/white_rounded_border_white_fill"
                    android:elevation="2dp"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="@dimen/padding_large">

                    <TextView
                        android:id="@+id/tv_spent_amount"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="₹45000"
                        android:textColor="@color/med_grey"
                        android:textSize="@dimen/text_xxxl"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="@string/amount_spent"
                        android:textColor="@color/med_grey"
                        android:textSize="@dimen/text_xl" />


                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_following_counter_wrapper"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/ll_person_following_wrapper"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/padding_small"
                    android:layout_weight="1"
                    android:background="@drawable/white_rounded_border_white_fill"
                    android:elevation="2dp"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="@dimen/padding_large">

                    <TextView
                        android:id="@+id/tv_total_attendee_count"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="245"
                        android:textColor="@color/med_grey"
                        android:textSize="@dimen/text_xxxxl"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="@string/attendees"
                        android:textColor="@color/med_grey"
                        android:textSize="@dimen/text_xl" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_session_count_wrapper"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/padding_small"
                    android:layout_weight="1"
                    android:background="@drawable/white_rounded_border_white_fill"
                    android:elevation="2dp"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="@dimen/padding_large">

                    <TextView
                        android:id="@+id/tv_sponsored_session_count"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="9"
                        android:textColor="@color/med_grey"
                        android:textSize="@dimen/text_xxxxl"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="@string/sessions"
                        android:textColor="@color/med_grey"
                        android:textSize="@dimen/text_xl" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/padding_small"
                android:background="@drawable/white_rounded_border_white_fill"
                android:elevation="2dp"
                android:orientation="vertical"
                android:paddingLeft="@dimen/padding_medium"
                android:paddingTop="@dimen/padding_medium"
                android:paddingRight="@dimen/padding_small"
                android:paddingBottom="32dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="@dimen/padding_small"
                    android:paddingTop="@dimen/padding_small"
                    android:paddingRight="@dimen/padding_small"
                    android:paddingBottom="@dimen/padding_small"
                    android:text="Most common interests of attendees"
                    android:textColor="@color/dark_grey"
                    android:textSize="@dimen/text_xxl"
                    android:textStyle="bold" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rv_interest_graph"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/padding_large"
                    android:nestedScrollingEnabled="true" />

            </LinearLayout>
        </LinearLayout>

        <ProgressBar
            android:id="@+id/pb_loading_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/padding_large" />
        <TextView
            android:id="@+id/tv_analytics_not_available"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            />
    </RelativeLayout>

</androidx.core.widget.NestedScrollView>