<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/padding_small"
                >

                <ImageView
                    android:id="@+id/iv_close"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:src="@android:drawable/ic_menu_close_clear_cancel"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="Filter"
                    android:textColor="@color/app_theme_dark"
                    android:textStyle="bold" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:background="@color/app_theme_medium"
                    android:layout_centerVertical="true"
                    android:text="Apply"
                    android:paddingTop="@dimen/padding_medium"
                    android:paddingBottom="@dimen/padding_medium"
                    android:paddingLeft="@dimen/padding_large"
                    android:paddingRight="@dimen/padding_large"
                    android:layout_marginLeft="@dimen/padding_medium"
                    android:textSize="@dimen/text_large"

                    />
            </RelativeLayout>

            <include layout="@layout/thinnest_app_theme_color_divider" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/ultra_light_grey"
                android:elevation="2dp"
                android:paddingBottom="@dimen/padding_small"
                android:paddingLeft="@dimen/padding_large"
                android:paddingRight="@dimen/padding_large"
                android:paddingTop="@dimen/padding_small"
                android:text="@string/by_time"
                android:textColor="@color/app_theme_dark" />

            <RadioGroup
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <RadioButton
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:buttonTint="@color/app_theme_medium"
                    android:text="@string/last_month"
                    android:layout_marginLeft="@dimen/padding_medium"
                    android:textColor="@color/med_grey" />

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:buttonTint="@color/app_theme_medium"
                    android:text="@string/last_week"
                    android:layout_marginLeft="@dimen/padding_medium"
                    android:textColor="@color/med_grey" />

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:buttonTint="@color/app_theme_medium"
                    android:text="@string/next_week"
                    android:layout_marginLeft="@dimen/padding_medium"
                    android:textColor="@color/med_grey" />

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:buttonTint="@color/app_theme_medium"
                    android:text="@string/next_month"
                    android:layout_marginLeft="@dimen/padding_medium"
                    android:textColor="@color/med_grey" />
                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:buttonTint="@color/app_theme_medium"
                    android:text="@string/all"
                    android:layout_marginLeft="@dimen/padding_medium"
                    android:textColor="@color/med_grey" />
            </RadioGroup>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/ultra_light_grey"
                android:elevation="2dp"
                android:paddingBottom="@dimen/padding_small"
                android:paddingLeft="@dimen/padding_large"
                android:paddingRight="@dimen/padding_large"
                android:paddingTop="@dimen/padding_small"
                android:text="@string/by_location"
                android:textColor="@color/app_theme_dark" />

            <RadioGroup
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <RadioButton
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:buttonTint="@color/app_theme_medium"
                    android:text="@string/near_me"
                    android:layout_marginLeft="@dimen/padding_medium"
                    android:textColor="@color/med_grey" />

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:buttonTint="@color/app_theme_medium"
                    android:text="@string/anywhere"
                    android:layout_marginLeft="@dimen/padding_medium"
                    android:textColor="@color/med_grey" />

            </RadioGroup>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/ultra_light_grey"
                android:elevation="2dp"
                android:paddingBottom="@dimen/padding_small"
                android:paddingLeft="@dimen/padding_large"
                android:paddingRight="@dimen/padding_large"
                android:paddingTop="@dimen/padding_small"
                android:text="By interests"
                android:textColor="@color/app_theme_dark" />

            <RadioGroup
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <RadioButton
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:buttonTint="@color/app_theme_medium"
                    android:text="My interests"
                    android:layout_marginLeft="@dimen/padding_medium"
                    android:textColor="@color/med_grey" />

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:buttonTint="@color/app_theme_medium"
                    android:text="Any interest"
                    android:layout_marginLeft="@dimen/padding_medium"
                    android:textColor="@color/med_grey" />


            </RadioGroup>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/ultra_light_grey"
                android:elevation="2dp"
                android:paddingBottom="@dimen/padding_small"
                android:paddingLeft="@dimen/padding_large"
                android:paddingRight="@dimen/padding_large"
                android:paddingTop="@dimen/padding_small"
                android:text="Filter Group"
                android:textColor="@color/app_theme_dark" />

            <RadioGroup
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <RadioButton
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:buttonTint="@color/app_theme_medium"
                    android:text="Filter item"
                    android:layout_marginLeft="@dimen/padding_medium"
                    android:textColor="@color/med_grey" />

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:buttonTint="@color/app_theme_medium"
                    android:text="Filter item"
                    android:layout_marginLeft="@dimen/padding_medium"
                    android:textColor="@color/med_grey" />

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:buttonTint="@color/app_theme_medium"
                    android:text="Filter item"
                    android:layout_marginLeft="@dimen/padding_medium"
                    android:textColor="@color/med_grey" />

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:buttonTint="@color/app_theme_medium"
                    android:text="Filter item"
                    android:layout_marginLeft="@dimen/padding_medium"
                    android:textColor="@color/med_grey" />

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:buttonTint="@color/app_theme_medium"
                    android:text="Filter item"
                    android:layout_marginLeft="@dimen/padding_medium"
                    android:textColor="@color/med_grey" />
            </RadioGroup>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/ultra_light_grey"
                android:elevation="2dp"
                android:paddingBottom="@dimen/padding_small"
                android:paddingLeft="@dimen/padding_large"
                android:paddingRight="@dimen/padding_large"
                android:paddingTop="@dimen/padding_small"
                android:text="Filter Group"
                android:textColor="@color/app_theme_dark" />

            <RadioGroup
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <RadioButton
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:buttonTint="@color/app_theme_medium"
                    android:text="Filter item"
                    android:layout_marginLeft="@dimen/padding_medium"
                    android:textColor="@color/med_grey" />

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:buttonTint="@color/app_theme_medium"
                    android:text="Filter item"
                    android:layout_marginLeft="@dimen/padding_medium"
                    android:textColor="@color/med_grey" />

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:buttonTint="@color/app_theme_medium"
                    android:text="Filter item"
                    android:layout_marginLeft="@dimen/padding_medium"
                    android:textColor="@color/med_grey" />

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:buttonTint="@color/app_theme_medium"
                    android:text="Filter item"
                    android:layout_marginLeft="@dimen/padding_medium"
                    android:textColor="@color/med_grey" />

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:buttonTint="@color/app_theme_medium"
                    android:text="Filter item"
                    android:layout_marginLeft="@dimen/padding_medium"
                    android:textColor="@color/med_grey" />
            </RadioGroup>

        </LinearLayout>
    </ScrollView>

</LinearLayout>