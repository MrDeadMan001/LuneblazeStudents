<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/ultra_light_grey"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/padding_small"
        android:layout_marginLeft="@dimen/padding_extra_small"
        android:layout_marginRight="@dimen/padding_extra_small"
        android:layout_marginTop="@dimen/padding_small"
        android:background="@color/white"
        android:elevation="2dp">

        <ImageView
            android:id="@+id/iv_interest_img"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/padding_large"
            android:src="@mipmap/ic_launcher" />

        <TextView
            android:id="@+id/tv_follow_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/padding_medium"
            android:layout_marginRight="@dimen/padding_large"
            android:background="@color/app_theme_medium"
            android:drawableLeft="@android:drawable/arrow_up_float"
            android:drawablePadding="@dimen/padding_small"
            android:elevation="1dp"
            android:paddingBottom="@dimen/padding_small"
            android:paddingLeft="@dimen/padding_medium"
            android:paddingRight="@dimen/padding_medium"
            android:paddingTop="@dimen/padding_small"
            android:text="Follow"
            android:textColor="#fff"
            android:textSize="12sp"

            />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@id/tv_follow_button"
            android:layout_toRightOf="@id/iv_interest_img"
            android:orientation="vertical"
            android:padding="@dimen/padding_small">

            <TextView
                android:id="@+id/tv_interest_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Interest Name"
                android:textColor="@color/app_theme_dark"
                android:textSize="14sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_no_followers"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="00 Followers"
                android:textColor="@color/light_grey"
                android:textSize="14sp" />
        </LinearLayout>

    </RelativeLayout>
    
</LinearLayout>